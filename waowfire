	loadstring(game:HttpGet("https://raw.githubusercontent.com/waowhubIlIl/waowfire/refs/heads/main/waowfireweb"))()
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or Players.LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")
local RootPart = Character:WaitForChild("HumanoidRootPart")
local RunService = game:GetService("RunService")

local PartConnections = {}
local PartDistances = {
    ["Left Leg"] = 0,
    ["Right Leg"] = 0,
    ["Torso"] = 0,
    ["Head"] = 0,
    ["GK"] = 0,
}
local GK_PARTS = {"Right Arm", "Left Arm"}

local function DisconnectActive(PartName)
    if PartConnections[PartName] then
        PartConnections[PartName]:Disconnect()
        PartConnections[PartName] = nil
    end
end

local function HandlePartReach(PartName, Distance)
    local IsGK = (PartName == "GK")
    local TargetParts = IsGK and GK_PARTS or {PartName}
    local CurrentConnection = PartConnections[PartName]

    if Distance > 0 then
        PartDistances[PartName] = Distance
        
        if not CurrentConnection then
            PartConnections[PartName] = RunService.RenderStepped:Connect(function()
                local Target = game.Workspace:FindFirstChild("TPSSystem") and game.Workspace.TPSSystem:FindFirstChild("TPS")

                if Target then
                    if (RootPart.Position - Target.Position).Magnitude <= PartDistances[PartName] then
                        for _, pName in ipairs(TargetParts) do
                            local CharacterPart = Character:FindFirstChild(pName)
                            if CharacterPart then
                                firetouchinterest(CharacterPart, Target, 0)
                                firetouchinterest(CharacterPart, Target, 1)
                            end
                        end
                    end
                end
            end)
            print("Reach Etkin: " .. PartName .. " için başlatıldı.")
        end
        
    else
        PartDistances[PartName] = 0
        if CurrentConnection then
            DisconnectActive(PartName)
            print("Reach Devre Dışı: " .. PartName .. " için durduruldu.")
        end
    end
end

-- LINORIA LIBRARY KÜTÜPHANESİ YÜKLEMESİ
local repo = 'https://raw.githubusercontent.com/violin-suzutsuki/LinoriaLib/main/'
local Library = loadstring(game:HttpGet(repo .. 'Library.lua'))()

local Window = Library:CreateWindow({
    Title = 'WaowHub FireTouch Version', -- BAŞLIK GÜNCELLENDİ
    Center = true,
    AutoShow = true,
    TabPadding = 8
})

local FireTouchTab = Window:AddTab('FireTouch')
local LeftGroupBox = FireTouchTab:AddLeftGroupbox('FireTouch') -- BAŞLIK GÜNCELLENDİ
-- Sağ bölüm tamamen kaldırıldığı için AddRightGroupbox satırı silindi.

-- Fonksiyon: Her parça için Linoria Slider oluşturur
local function CreateReachSlider(partName, initialValue)
    LeftGroupBox:AddSlider(partName:gsub(" ", "") .. "Slider", { 
        Text = partName .. " Studs", -- İSİM GÜNCELLENDİ
        Default = initialValue or 0,
        Min = 0,
        Max = 30, -- MAKSİMUM DEĞER 30 YAPILDI
        Rounding = 1,
        Suffix = " studs",

        Callback = function(Value)
            local FloorValue = math.floor(Value * 10) / 10
            HandlePartReach(partName, FloorValue)
        end
    })
end

-- Sliderların çağrılması
CreateReachSlider("Left Leg")
CreateReachSlider("Right Leg")
CreateReachSlider("Torso")
CreateReachSlider("Head")
CreateReachSlider("GK")


-- UI Settings Sekmesi (TÜMÜ İNGİLİZCE)
local UISettingsTab = Window:AddTab('UI Settings')
local MenuGroup = UISettingsTab:AddLeftGroupbox('Menu Settings') -- İNGİLİZCE
local SaveManager = loadstring(game:HttpGet(repo .. 'addons/SaveManager.lua'))()
local ThemeManager = loadstring(game:HttpGet(repo .. 'addons/ThemeManager.lua'))()

ThemeManager:SetLibrary(Library)
SaveManager:SetLibrary(Library)

-- Menü Kısayolu Ayarı
MenuGroup:AddLabel('Menu Keybind'):AddKeyPicker('MenuKeybind', { -- İNGİLİZCE
    Default = 'K', 
    NoUI = true, 
    Text = 'Toggle menu visibility' -- İNGİLİZCE
})

Library.ToggleKeybind = Options.MenuKeybind

-- Unload Butonu
MenuGroup:AddButton({
    Text = 'Unload Script', -- İNGİLİZCE
    Func = function()
        Library:Unload()
        print("Script unloaded.")
    end,
    Tooltip = 'Completely stops and unloads the script.' -- İNGİLİZCE
})

-- Tema Yöneticisi
ThemeManager:SetFolder('WaowHub_Configs')
SaveManager:SetFolder('WaowHub_Configs')
SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({ 'MenuKeybind' })

ThemeManager:ApplyToTab(UISettingsTab)
SaveManager:BuildConfigSection(UISettingsTab)
SaveManager:LoadAutoloadConfig()
